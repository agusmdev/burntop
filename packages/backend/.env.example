# Application
APP_NAME=Burntop API
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/burntop
TEST_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/burntop_test
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Logging
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use DEBUG in development to see all logs including SQL queries and HTTP requests
# Use INFO in production
LOG_LEVEL=DEBUG
# LOG_JSON_FORMAT: true for production (machine-readable), false for development (human-readable)
LOG_JSON_FORMAT=false

# Frontend
FRONTEND_URL=http://localhost:3000

# Backend (for OAuth callbacks)
BACKEND_URL=http://localhost:8000

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
