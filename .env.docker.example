# Burntop Docker Environment Variables
# Copy to .env and configure before running: cp .env.docker.example .env

# Database connection (REQUIRED)
# macOS/Windows: use host.docker.internal
# Linux: use host IP or add --add-host=host.docker.internal:host-gateway
DATABASE_URL=postgresql+asyncpg://burntop:burntop_dev_password@host.docker.internal:5432/burntop

# Backend secret key (REQUIRED - min 32 chars)
SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-chars

# Frontend URLs
VITE_API_URL=http://backend:8000
VITE_APP_URL=http://localhost:3000

# Backend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# CORS origins (JSON array)
# CORS_ORIGINS=["http://localhost:3000"]

# Debug mode
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_JSON_FORMAT=true

# OAuth - GitHub (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Monitoring (optional)
SENTRY_DSN=
VITE_PLAUSIBLE_DOMAIN=
